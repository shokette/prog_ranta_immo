<div class="container py-4">
    <%= link_to "Ajouter un guide",
                new_guide_path,
                class: "btn btn-outline-primary mb-4 d-inline-block", style: "float: right" %>
    <div style="clear: both"></div>
    <% if @guides.any? %>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                <tr>
                    <th>Nom</th>
                    <th>Téléphone</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <% @guides.each do |guide| %>
                    <tr>
                        <td><%= guide.name %></td>
                        <td><%= guide.phone %></td>
                        <td><%= guide.email %></td>
                        <td class="text-nowrap">
                            <div class="btn-group">
                                <%= link_to edit_guide_path(guide), class: "btn btn-outline-dark btn-sm", title: "Editer" do %>
                                    <i class="fas fa-pen"></i>
                                <% end %>
                                <%= button_to guide_path(guide),
                                              method: :delete,
                                              class: "btn btn-outline-dark btn-sm",
                                              title: "Supprimer",
                                              form: { style: 'display: inline-block', onsubmit: "return confirm('Supprimer ce guide ?')" } do %>
                                    <i class="fas fa-trash"></i>
                                <% end %>
                            </div>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    <% else %>
        <div class="alert alert-info">Aucun guide trouvé</div>
    <% end %>
</div>